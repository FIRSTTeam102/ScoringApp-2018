extends ../layout
block content
	h2 Audit trail for match scouting comments
	p
	div(class="w3-col s12 l8 theme-spacer")
		div(class="w3-col m3 w3-padding")
			strong Scorer
		div(class="w3-col m3 w3-padding")
			strong Match Number
		div(class="w3-col m6 w3-padding")
			strong Comment
	each row in audit
		div(class="w3-col s12 l8 theme-spacer")
			div(class="w3-col m3 w3-padding")
				span=row.actual_scorer
			div(class="w3-col m3 w3-padding")
				- var key = row.match_team_key
				- var titlePortion = key.substring(key.indexOf('_')+1).replace('_',', ').replace('qm','Match #').replace('frc','Team #');
				a(href=`/scouting/match?key=${key}` class="w3-btn theme-gray theme-hover-white")
					span=titlePortion
			div(class="w3-col m6 w3-padding")
				span=row.data.otherNotes