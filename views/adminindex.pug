//-
	Admin index. Provides links to various administative pages.
	PARAM
		current		[String] Current event key.
	CALLED FROM
		adminindex.js	'/'
	//
extends layout
block content
	h3(class="gear-text-white")=title
	div(class="w3-container w3-section")
		h4(class="gear-text-white") Member Management
		a(href="/admin/audit") 
			div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
				span Scouting audit
		a(href="/admin/scoutingpairs") 
			div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
				span Scouting pairs
		a(href="/admin/teammembers") 
			div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
				span Manage Members
		a(href="/admin/teammembers/present") 
			div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
				span Set who is present at current event
		a(href="/admin/scoutingpairs/swapmembers") 
			div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
				span Swap out/in match scouts
		div(class="w3-container")
			a(href="/login/resetpassword")
				div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
					span  Reset User Password
			a(href="/login/adduser")
				div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
					span Add Admin
	div(class="w3-container w3-section")
		h4(class="gear-text-white") Current Event - #{current}
		a(href="/admin/current/matches") 
			div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
				span See matches for current event
		a(href="/allianceselection") 
			div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
				span Alliance selection data
	div(class="w3-container w3-section")
		h4(class="gear-text-white") API Data Management
		a(href="/admin/data/events") 
			div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section")
				span Load/Update events
		hr
		form#setCurrentEvent(name="setCurrentEvent" method="post" action="/admin/setcurrent")
			input#setEvent(type="text", name="eventId")
			button#btnSubmit(type="submit") Set current eventId