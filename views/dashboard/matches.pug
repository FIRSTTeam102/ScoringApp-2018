extends ../layout

block content
	if matches.length > 0
		h2(class="gear-text-white") Match Scouting
		table(style="margin-right: auto; margin-left:auto")#matchTable
			tr
				th(onclick="w3.sortHTML('#matchTable','.item', 'td:nth-child(1)')" style="cursor:pointer") Match
				th(onclick="w3.sortHTML('#matchTable','.item', 'td:nth-child(3)')" style="cursor:pointer") Assigned
				th Team
			each match in matches
				tr(class="item")
					- match.alliance = (match.alliance == "red") ? "Red" : "Blue";
					td= match.match_number
					td= match.assigned_scorer
					td
						if match.data
							div(class="gear-btn w3-dark-grey w3-btn w3-section gear-margin-sides")
								span= match.team_key.substring(3)
						else
							- var btnColor = (match.alliance == "Red") ? "gear-red" : "gear-blue"
							a(href=`/scouting/match?key=${match.match_team_key}`) 
								div(class=`gear-btn ${btnColor} gear-hover-white w3-btn w3-section gear-margin-sides`)
									span= match.team_key.substring(3)
