extends ../layout

block content
	if matches.length > 0
		h2(class="gear-text-white") Match Scouting
		table#matchTable
			tr
				th(onclick="w3.sortHTML('#matchTable','.item', 'td:nth-child(1)')" style="cursor:pointer") Num
				th Alliance
				th(onclick="w3.sortHTML('#matchTable','.item', 'td:nth-child(3)')" style="cursor:pointer") Assigned
				th Team
			each match in matches
				tr(class="item")
					td= match.match_number
					td= match.alliance
					td= match.assigned_scorer
					td
						if match.data
							div(class="gear-btn gear-blue w3-btn w3-section gear-margin-sides")
								span= match.team_key.substring(3)
						else
							a(href=`/scouting/match?key=${match.match_team_key}`) 
								div(class="gear-btn gear-orange gear-hover-white w3-btn w3-section gear-margin-sides")
									span= match.team_key.substring(3)
