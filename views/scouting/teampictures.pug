extends ../layout

block content
	if (rankings)
		h2(class="gear-text-white") Current event rankings
		h6 <i>Click on a team to see intel on that team</i>
		table(class="w3-table")
			tr
				th Rank
				th Team
				th Picture
				th Origin
			each team in rankings
				tr
					td(class="gear-text-white w3-center")= team.rank
					td(class="w3-text-light-gray w3-center")
						a(href=`/reports/teamintel?team=${team.team_key}`)= team.team_key.substring(3)
					td
						img(src=`/uploads/responsive/${event_year}_${team.team_key}_sm.jpg` alt="[No image available]" class="w3-image" style="max-height:350px;")
					td(class="w3-text-light-gray w3-center") Origin (need help finding this)
	else
		h2(class="gear-text-white") <i>There are no rankings in the system yet</i>
		h6 Please check back later
